    /* ============================================
   8. RESPONSIVE DESIGN - ULTRA-PRO SYSTEM
   ============================================ */

    /* Fluid Typography with Clamp */
    .luxury-title {
        font-size: clamp(2rem, 5vw + 1rem, 3.5rem);
    }

    .luxury-subtitle {
        font-size: clamp(0.9rem, 2vw + 0.5rem, 1.15rem);
    }

    .stat-value {
        font-size: clamp(2rem, 4vw + 0.5rem, 3rem);
    }

    .toggle-text {
        font-size: clamp(1.25rem, 3vw + 0.5rem, 1.75rem);
    }

    .modal-title {
        font-size: clamp(1.5rem, 3vw + 0.5rem, 2rem);
    }

    /* Tablet Breakpoint (768px - 1024px) - 8-Column Layout */
    @media (max-width: 1024px) {
        .luxury-dashboard {
            padding: 0;
        }

        .luxury-header {
            margin-bottom: 3rem;
        }

        .header-icon {
            width: 48px;
            height: 48px;
        }

        .status-primary {
            margin-bottom: 3.5rem;
        }

        .status-toggle {
            padding: 1.75rem 3.5rem;
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
            max-width: 100%;
        }

        /* Last card spans both columns on tablet */
        .stat-card:last-child {
            grid-column: 1 / -1;
            max-width: 50%;
            margin: 0 auto;
        }

        .stat-card {
            padding: 2.5rem 2rem;
        }

        .stat-icon-wrapper {
            width: 64px;
            height: 64px;
        }

        .luxury-table th,
        .luxury-table td {
            padding: 1.25rem 1.5rem;
            font-size: 0.9rem;
        }
    }

    /* Mobile Breakpoint (max-width: 767px) - 4-Column Stacked Layout */
    @media (max-width: 767px) {
        .luxury-dashboard {
            padding: 0;
        }

        /* Header - Centered & Scaled */
        .luxury-header {
            margin-bottom: 2.5rem;
            padding: 0 1rem;
        }

        .header-icon-wrapper {
            margin-bottom: 1rem;
        }

        .header-icon {
            width: 40px;
            height: 40px;
        }

        .luxury-header::before {
            width: 400px;
            height: 150px;
        }

        /* Status Section - Centered */
        .status-primary {
            margin-bottom: 3rem;
            padding: 0 1rem;
        }

        .status-label {
            font-size: 0.75rem;
            margin-bottom: 1.5rem;
        }

        .status-toggle {
            padding: 1.5rem 2.5rem;
        }

        .toggle-content {
            gap: 0.75rem;
        }

        /* Statistics - Single Column Stack */
        .stats-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
            padding: 0 1rem;
        }

        .stat-card {
            padding: 2rem 1.75rem;
        }

        .stat-card:last-child {
            grid-column: 1;
            max-width: 100%;
        }

        .stat-icon-wrapper {
            width: 56px;
            height: 56px;
        }

        .stat-icon {
            width: 28px;
            height: 28px;
        }

        .stat-label {
            font-size: 0.75rem;
        }

        /* Table - Enhanced Mobile View */
        .luxury-table-container {
            padding: 0 1rem;
        }

        .table-wrapper {
            padding: 1rem;
            border-radius: 24px;
        }

        .luxury-table {
            border-spacing: 0 0.5rem;
        }

        .luxury-table th {
            padding: 0.75rem 0.5rem;
            font-size: 0.65rem;
            letter-spacing: 0.1em;
        }

        .luxury-table td {
            padding: 1rem 0.5rem;
            font-size: 0.8rem;
        }

        .member-name-cell {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .member-avatar-placeholder {
            width: 32px;
            height: 32px;
            font-size: 0.75rem;
        }

        .member-name {
            font-size: 0.85rem;
        }

        .mono-text {
            font-size: 0.8rem;
        }

        .role-badge,
        .status-badge {
            padding: 0.35rem 0.75rem;
            font-size: 0.7rem;
        }

        .action-button {
            padding: 0.5rem;
        }

        /* Modal - Full Width on Mobile */
        .luxury-modal {
            padding: 2rem 1.5rem;
            width: 95%;
            border-radius: 24px;
        }

        .modal-text {
            font-size: 0.95rem;
            margin-bottom: 2rem;
        }

        .modal-actions {
            flex-direction: column;
            gap: 1rem;
        }

        .btn-secondary,
        .btn-danger {
            width: 100%;
            padding: 0.875rem 2rem;
        }
    }

    /* Small Mobile Breakpoint (max-width: 480px) */
    @media (max-width: 480px) {
        .luxury-header {
            margin-bottom: 2rem;
        }

        .header-icon {
            width: 36px;
            height: 36px;
        }

        .status-toggle {
            padding: 1.25rem 2rem;
        }

        .stats-grid {
            gap: 1.25rem;
        }

        .stat-card {
            padding: 1.75rem 1.5rem;
            gap: 1.5rem;
        }

        .stat-icon-wrapper {
            width: 48px;
            height: 48px;
        }

        /* Compact table for very small screens */
        .luxury-table thead {
            display: none;
        }

        .luxury-table tbody tr {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            background: rgba(255, 255, 255, 0.03);
            padding: 1.25rem;
            margin-bottom: 1rem;
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.06);
        }

        .luxury-table td {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.5rem 0;
            border: none;
        }

        .luxury-table td:first-child {
            border-radius: 0;
        }

        .luxury-table td:last-child {
            border-radius: 0;
        }

        .luxury-table td::before {
            content: attr(data-label);
            font-size: 0.7rem;
            font-weight: 700;
            color: rgba(255, 255, 255, 0.5);
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }

        .member-name-cell {
            flex-direction: row;
            width: 100%;
        }
    }

    /* Large Desktop (min-width: 1440px) - Enhanced Spacing */
    @media (min-width: 1440px) {
        .luxury-header {
            margin-bottom: 5rem;
        }

        .status-primary {
            margin-bottom: 6rem;
        }

        .stats-grid {
            gap: 3rem;
            max-width: 1600px;
        }

        .stat-card {
            padding: 3.5rem 3rem;
        }

        .luxury-table-container {
            max-width: 1600px;
        }
    }

    /* Touch Device Optimizations */
    @media (hover: none) and (pointer: coarse) {
        .stat-card:hover {
            transform: none;
        }

        .action-button {
            padding: 0.875rem;
            min-width: 44px;
            min-height: 44px;
        }

        .status-toggle {
            min-height: 60px;
        }
    }

    /* Safe Area for Notched Displays */
    @supports (padding: env(safe-area-inset-left)) {
        .luxury-dashboard {
            padding-left: env(safe-area-inset-left);
            padding-right: env(safe-area-inset-right);
        }
    }

    /* Reduced Motion Preference */
    @media (prefers-reduced-motion: reduce) {

        *,
        *::before,
        *::after {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }
    }