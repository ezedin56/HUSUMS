/* ============================================
   ELITE CINEMATIC COMMAND CENTER UI
   2026-Grade Enterprise Dashboard
    position: fixed;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background:
        radial-gradient(circle at 15% 20%, rgba(63, 255, 134, 0.08) 0%, transparent 40%),
        radial-gradient(circle at 85% 80%, rgba(89, 245, 227, 0.06) 0%, transparent 40%),
        radial-gradient(circle at 50% 50%, rgba(63, 255, 134, 0.03) 0%, transparent 60%);
    filter: blur(60px);
    animation: atmosphericDrift 30s ease-in-out infinite;
    pointer-events: none;
    z-index: 0;
}

@keyframes atmosphericDrift {

    0%,
    100% {
        transform: translate(0, 0) scale(1);
        opacity: 0.8;
    }

    50% {
        transform: translate(2%, 3%) scale(1.05);
        opacity: 1;
    }
}

/* Parallax Depth Layer */
.luxury-dashboard::after {
    content: '';
    position: fixed;
    inset: 0;
    background:
        radial-gradient(circle at 30% 40%, rgba(63, 255, 134, 0.04) 0%, transparent 50%),
        radial-gradient(circle at 70% 60%, rgba(89, 245, 227, 0.03) 0%, transparent 50%);
    filter: blur(40px);
    animation: parallaxFloat 20s ease-in-out infinite reverse;
    pointer-events: none;
    z-index: 0;
}

@keyframes parallaxFloat {

    0%,
    100% {
        transform: translateY(0px) scale(1);
    }

    50% {
        transform: translateY(-20px) scale(1.02);
    }
}

/* Floating Particles System */
.luxury-dashboard .particles {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 1;
}

.luxury-dashboard .particle {
    position: absolute;
    width: 2px;
    height: 2px;
    background: rgba(63, 255, 134, 0.3);
    border-radius: 50%;
    filter: blur(1px);
    animation: particleRise 15s linear infinite;
}

.luxury-dashboard .particle:nth-child(2n) {
    background: rgba(89, 245, 227, 0.25);
    animation-duration: 18s;
}

.luxury-dashboard .particle:nth-child(3n) {
    animation-duration: 22s;
}

@keyframes particleRise {
    0% {
        transform: translateY(100vh) scale(0);
        opacity: 0;
    }

    10% {
        opacity: 0.3;
    }

    90% {
        opacity: 0.1;
    }

    100% {
        transform: translateY(-100px) scale(1);
        opacity: 0;
    }
}

/* Holographic Noise Texture */
.luxury-dashboard .noise-layer {
    position: fixed;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' /%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
    pointer-events: none;
    z-index: 1;
    mix-blend-mode: overlay;
}

/* ============================================
   2. LOADING STATE
   ============================================ */

.luxury-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 70vh;
    gap: 2rem;
    position: relative;
    z-index: 10;
}

.loading-spinner {
    width: 70px;
    height: 70px;
    border: 3px solid rgba(63, 255, 134, 0.1);
    border-top-color: #3FFF86;
    border-right-color: #59F5E3;
    border-radius: 50%;
    animation: spinGlow 1s cubic-bezier(0.4, 0, 0.2, 1) infinite;
    box-shadow: 0 0 30px rgba(63, 255, 134, 0.3);
}

@keyframes spinGlow {
    0% {
        transform: rotate(0deg);
        filter: drop-shadow(0 0 10px rgba(63, 255, 134, 0.5));
    }

    50% {
        filter: drop-shadow(0 0 20px rgba(63, 255, 134, 0.8));
    }

    100% {
        transform: rotate(360deg);
        filter: drop-shadow(0 0 10px rgba(63, 255, 134, 0.5));
    }
}

.luxury-loading p {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    font-weight: 600;
}

/* ============================================
   3. HEADER ZONE - CINEMATIC TITLE
   ============================================ */

.luxury-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 10;
    opacity: 0;
    transform: translateY(-30px);
    animation: headerReveal 1s cubic-bezier(0.25, 0.1, 0.25, 1) forwards;
}

@keyframes headerReveal {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Volumetric Fog Behind Title */
.luxury-header::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 200px;
    background: radial-gradient(ellipse, rgba(63, 255, 134, 0.15) 0%, transparent 70%);
    filter: blur(80px);
    pointer-events: none;
    z-index: -1;
    animation: fogBreath 6s ease-in-out infinite;
}

@keyframes fogBreath {

    0%,
    100% {
        opacity: 0.5;
        transform: translate(-50%, -50%) scale(1);
    }

    50% {
        100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-6px);
        }
    }

    .header-icon {
        color: #3FFF86;
        filter: drop-shadow(0 0 25px rgba(63, 255, 134, 0.6));
        animation: iconPulse 6s ease-in-out infinite;
    }

    @keyframes iconPulse {

        0%,
        100% {
            opacity: 0.8;
            transform: scale(1);
        }

        50% {
            opacity: 1;
            transform: scale(1.08);
        }
    }

    .icon-glow {
        position: absolute;
        inset: -30px;
        background: radial-gradient(circle, rgba(63, 255, 134, 0.4) 0%, transparent 70%);
        border-radius: 50%;
        filter: blur(25px);
        animation: glowPulse 6s ease-in-out infinite;
    }

    @keyframes glowPulse {

        0%,
        100% {
            opacity: 0.4;
            transform: scale(0.9);
        }

        50% {
            opacity: 0.7;
            transform: scale(1.15);
        }
    }

    .luxury-title {
        font-size: 3.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #ffffff 0%, #3FFF86 60%, #59F5E3 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.75rem;
        letter-spacing: -0.03em;
        position: relative;
        text-shadow: 0 0 40px rgba(63, 255, 134, 0.3);
    }

    /* Shimmer Reflection Effect */
    .luxury-title::before {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.4) 50%, transparent 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        background-size: 200% 100%;
        animation: shimmer 8s linear infinite;
        opacity: 0;
    }

    @keyframes shimmer {
        0% {
            background-position: -200% 0;
            opacity: 0;
        }

        50% {
            opacity: 0.3;
        }

        100% {
            background-position: 200% 0;
            opacity: 0;
        }
    }

    .luxury-subtitle {
        font-size: 1.15rem;
        color: rgba(255, 255, 255, 0.75);
        font-weight: 300;
        letter-spacing: 0.05em;
        opacity: 0;
        transform: translateY(10px);
        animation: subtitleSlide 1s cubic-bezier(0.25, 0.1, 0.25, 1) 0.3s forwards;
    }

    @keyframes subtitleSlide {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ============================================
   4. PRIMARY STATUS MODULE - CRITICAL COMPONENT
   ============================================ */

    .status-primary {
        max-width: 600px;
        margin: 0 auto 5rem;
        text-align: center;
        position: relative;
        z-index: 10;
        opacity: 0;
        transform: scale(0.95);
        animation: statusReveal 0.8s cubic-bezier(0.25, 0.1, 0.25, 1) 0.5s forwards;
    }

    @keyframes statusReveal {
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    /* Depth Shadow Underneath */
    .status-primary::before {
        content: '';
        position: absolute;
        bottom: -40px;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        height: 30px;
        background: radial-gradient(ellipse, rgba(0, 0, 0, 0.4) 0%, transparent 70%);
        filter: blur(20px);
        z-index: -1;
    }

    .status-label {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.55);
        text-transform: uppercase;
        letter-spacing: 0.2em;
        margin-bottom: 2rem;
        font-weight: 700;
    }

    .status-toggle {
        position: relative;
        display: inline-flex;
        align-items: center;
        gap: 1.25rem;
        padding: 2rem 4rem;
        background: rgba(255, 255, 255, 0.02);
        backdrop-filter: blur(30px) saturate(180%);
        -webkit-backdrop-filter: blur(30px) saturate(180%);
        border: 1.5px solid rgba(255, 255, 255, 0.12);
        border-radius: 60px;
        cursor: pointer;
        transition: all 0.5s cubic-bezier(0.25, 0.1, 0.25, 1);
        overflow: visible;
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.4),
            inset 0 1px 0 rgba(255, 255, 255, 0.1),
            0 0 60px rgba(63, 255, 134, 0.1);
    }

    .status-toggle:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow:
            0 16px 48px rgba(0, 0, 0, 0.5),
            inset 0 1px 0 rgba(255, 255, 255, 0.15),
            0 0 80px rgba(63, 255, 134, 0.2);
    }

    /* Neon Perimeter Glow */
    .toggle-ring {
        position: absolute;
        inset: -4px;
        border-radius: 60px;
        padding: 4px;
        background: linear-gradient(135deg, transparent, transparent);
        -webkit-mask:
            linear-gradient(#fff 0 0) content-box,
            linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        opacity: 0;
        transition: opacity 0.5s;
        filter: blur(1px);
    }

    .status-toggle.status-open .toggle-ring {
        background: linear-gradient(135deg, #3FFF86, #59F5E3, #3FFF86);
        background-size: 200% 200%;
        opacity: 1;
        animation: neonFlow 4s ease-in-out infinite, breathingGlow 3s ease-in-out infinite;
    }

    @keyframes neonFlow {

        0%,
        100% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }
    }

    @keyframes breathingGlow {

        0%,
        100% {
            opacity: 0.7;
            filter: blur(1px);
        }

        50% {
            opacity: 1;
            filter: blur(2px);
        }
    }

    .status-toggle.status-closed .toggle-ring {
        background: linear-gradient(135deg, #FF6B6B, #FFA07A);
        opacity: 0.6;
    }

    .toggle-content {
        display: flex;
        align-items: center;
        gap: 1rem;
        position: relative;
        z-index: 1;
    }

    .toggle-text {
        font-size: 1.75rem;
        font-weight: 800;
        letter-spacing: 0.15em;
        position: relative;
    }

    .status-toggle.status-open {
        color: #3FFF86;
        text-shadow: 0 0 30px rgba(63, 255, 134, 0.6);
    }

    .status-toggle.status-closed {
        color: #FF6B6B;
        text-shadow: 0 0 30px rgba(255, 107, 107, 0.6);
    }

    /* Volumetric Halo Behind Toggle */
    .toggle-glow {
        position: absolute;
        inset: -80%;
        background: radial-gradient(circle, currentColor 0%, transparent 70%);
        opacity: 0.15;
        filter: blur(60px);
        pointer-events: none;
        animation: volumetricPulse 4s ease-in-out infinite;
    }

    @keyframes volumetricPulse {

        0%,
        100% {
            opacity: 0.1;
            transform: scale(0.9);
        }

        50% {
            opacity: 0.2;
            transform: scale(1.1);
        }
    }

    /* ============================================
   5. STATISTICS CARDS - PREMIUM GLASS
   ============================================ */

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2.5rem;
        max-width: 1400px;
        margin: 0 auto 5rem;
        position: relative;
        z-index: 10;
    }

    .stat-card {
        position: relative;
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(30px) saturate(150%);
        -webkit-backdrop-filter: blur(30px) saturate(150%);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 32px;
        padding: 3rem 2.5rem;
        display: flex;
        align-items: center;
        gap: 2rem;
        transition: all 0.5s cubic-bezier(0.25, 0.1, 0.25, 1);
        overflow: hidden;
        opacity: 0;
        transform: translateY(40px);
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.3),
            inset 0 1px 0 rgba(255, 255, 255, 0.08);
    }

    .stat-card.slide-up {
        opacity: 1;
        transform: translateY(0);
    }

    .stat-card:hover {
        transform: translateY(-12px) scale(1.03);
        border-color: rgba(63, 255, 134, 0.4);
        box-shadow:
            0 24px 64px rgba(0, 0, 0, 0.5),
            0 0 50px rgba(63, 255, 134, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.15);
    }

    /* Glass Reflection Sweep */
    .card-shimmer {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg,
                transparent,
                rgba(255, 255, 255, 0.08),
                transparent);
        animation: autoShimmer 10s linear infinite;
    }

    @keyframes autoShimmer {
        0% {
            left: -100%;
        }

        100% {
            left: 100%;
        }
    }

    .stat-card:hover .card-shimmer {
        animation: none;
        left: 100%;
        transition: left 0.8s cubic-bezier(0.25, 0.1, 0.25, 1);
    }

    /* Icon Containers with Hollow Neon Style */
    .stat-icon-wrapper {
        position: relative;
        flex-shrink: 0;
        width: 72px;
        height: 72px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(63, 255, 134, 0.08);
        border-radius: 20px;
        border: 2px solid rgba(63, 255, 134, 0.3);
        transition: all 0.4s;
    }

    .stat-card:hover .stat-icon-wrapper {
        transform: rotate(3deg);
        border-color: rgba(63, 255, 134, 0.5);
    }

    .stat-icon-wrapper.warning {
        background: rgba(255, 107, 107, 0.08);
        border-color: rgba(255, 107, 107, 0.3);
    }

    .stat-icon-wrapper.status {
        background: rgba(89, 245, 227, 0.08);
        border-color: rgba(89, 245, 227, 0.3);
    }

    .stat-icon {
        color: #3FFF86;
        filter: drop-shadow(0 0 15px rgba(63, 255, 134, 0.5));
        animation: iconPulse 6s ease-in-out infinite;
    }

    .stat-icon-wrapper.warning .stat-icon {
        color: #FF6B6B;
        filter: drop-shadow(0 0 15px rgba(255, 107, 107, 0.5));
    }

    .stat-icon-wrapper.status .stat-icon {
        color: #59F5E3;
        filter: drop-shadow(0 0 15px rgba(89, 245, 227, 0.5));
    }

    .stat-icon-glow {
        position: absolute;
        inset: -15px;
        background: radial-gradient(circle, #3FFF86 0%, transparent 70%);
        opacity: 0.25;
        filter: blur(20px);
        border-radius: 20px;
        animation: glowPulse 6s ease-in-out infinite;
    }

    .stat-icon-glow.warning {
        background: radial-gradient(circle, #FF6B6B 0%, transparent 70%);
    }

    .stat-icon-glow.success {
        background: radial-gradient(circle, #3FFF86 0%, transparent 70%);
    }

    .stat-content {
        flex: 1;
    }

    .stat-label {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
        text-transform: uppercase;
        letter-spacing: 0.12em;
        margin-bottom: 0.75rem;
        font-weight: 700;
    }

    .stat-value {
        font-size: 3rem;
        font-weight: 800;
        color: #ffffff;
        text-shadow: 0 0 30px rgba(255, 255, 255, 0.4);
        line-height: 1;
        font-variant-numeric: tabular-nums;
    }

    .stat-value.warning-value {
        color: #FF6B6B;
        text-shadow: 0 0 30px rgba(255, 107, 107, 0.5);
    }

    .stat-value.success-value {
        color: #3FFF86;
        text-shadow: 0 0 30px rgba(63, 255, 134, 0.5);
    }

    /* ============================================
   6. TABLE SECTION - HYPER-POLISHED
   ============================================ */

    .luxury-table-container {
        max-width: 1400px;
        margin: 0 auto;
        position: relative;
        z-index: 10;
        opacity: 0;
        transform: translateY(30px);
        animation: tableReveal 0.8s cubic-bezier(0.25, 0.1, 0.25, 1) 0.8s forwards;
    }

    @keyframes tableReveal {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .table-wrapper {
        background: rgba(255, 255, 255, 0.02);
        backdrop-filter: blur(30px) saturate(180%);
        -webkit-backdrop-filter: blur(30px) saturate(180%);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 32px;
        padding: 2.5rem;
        overflow-x: auto;
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.3),
            inset 0 1px 0 rgba(255, 255, 255, 0.08);
    }

    .luxury-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 1rem;
    }

    .luxury-table thead tr {
        background: transparent;
    }

    .luxury-table th {
        padding: 1.25rem 1.75rem;
        text-align: left;
        font-size: 0.7rem;
        font-weight: 800;
        color: rgba(255, 255, 255, 0.55);
        text-transform: uppercase;
        letter-spacing: 0.15em;
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

    .luxury-table tbody tr {
        background: rgba(255, 255, 255, 0.02);
        transition: all 0.4s cubic-bezier(0.25, 0.1, 0.25, 1);
        opacity: 0;
        transform: translateX(-15px);
    }

    .luxury-table tbody tr.fade-in {
        opacity: 1;
        transform: translateX(0);
    }

    .luxury-table tbody tr:hover {
        background: rgba(63, 255, 134, 0.06);
        box-shadow:
            0 6px 24px rgba(0, 0, 0, 0.3),
            inset 0 0 0 1px rgba(63, 255, 134, 0.2);
        transform: translateX(4px);
    }

    .luxury-table td {
        padding: 1.5rem 1.75rem;
        color: rgba(255, 255, 255, 0.95);
        font-size: 0.95rem;
        border-top: 1px solid rgba(255, 255, 255, 0.04);
        border-bottom: 1px solid rgba(255, 255, 255, 0.04);
    }

    .luxury-table tbody tr td:first-child {
        border-left: 1px solid rgba(255, 255, 255, 0.04);
        border-top-left-radius: 16px;
        border-bottom-left-radius: 16px;
    }

    .luxury-table tbody tr td:last-child {
        border-right: 1px solid rgba(255, 255, 255, 0.04);
        border-top-right-radius: 16px;
        border-bottom-right-radius: 16px;
    }

    .member-name-cell {
        display: flex;
        align-items: center;
        gap: 1.25rem;
    }

    .member-avatar-placeholder {
        width: 44px;
        height: 44px;
        border-radius: 12px;
        background: linear-gradient(135deg, rgba(63, 255, 134, 0.15), rgba(89, 245, 227, 0.15));
        border: 1.5px solid rgba(63, 255, 134, 0.4);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        font-weight: 800;
        color: #3FFF86;
        text-shadow: 0 0 10px rgba(63, 255, 134, 0.5);
    }

    .member-name-wrapper {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .member-name {
        font-weight: 600;
        color: rgba(255, 255, 255, 0.95);
    }

    .warning-indicator {
        position: relative;
        display: flex;
        align-items: center;
        color: #FF6B6B;
        filter: drop-shadow(0 0 10px rgba(255, 107, 107, 0.5));
    }

    .warning-tooltip {
        position: absolute;
        left: calc(100% + 0.75rem);
        background: rgba(0, 0, 0, 0.95);
        backdrop-filter: blur(10px);
        color: #ffffff;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        border: 1px solid rgba(255, 107, 107, 0.3);
        font-size: 0.75rem;
        white-space: nowrap;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.5);
    }

    .warning-indicator:hover .warning-tooltip {
        opacity: 1;
    }

    .mono-text {
        font-family: 'SF Mono', 'Monaco', 'Courier New', monospace;
        color: rgba(255, 255, 255, 0.75);
        font-size: 0.9rem;
        letter-spacing: 0.02em;
    }

    .role-badge {
        display: inline-block;
        padding: 0.5rem 1.25rem;
        background: rgba(89, 245, 227, 0.08);
        border: 1px solid rgba(89, 245, 227, 0.3);
        border-radius: 24px;
        font-size: 0.8rem;
        font-weight: 700;
        color: #59F5E3;
        text-transform: capitalize;
        letter-spacing: 0.05em;
    }

    .status-badge {
        display: inline-block;
        padding: 0.5rem 1.25rem;
        border-radius: 24px;
        font-size: 0.8rem;
        font-weight: 700;
        letter-spacing: 0.05em;
    }

    .status-badge.active {
        background: rgba(63, 255, 134, 0.08);
        border: 1px solid rgba(63, 255, 134, 0.4);
        color: #3FFF86;
        text-shadow: 0 0 10px rgba(63, 255, 134, 0.3);
    }

    .status-badge.warning {
        background: rgba(255, 107, 107, 0.08);
        border: 1px solid rgba(255, 107, 107, 0.4);
        color: #FF6B6B;
        text-shadow: 0 0 10px rgba(255, 107, 107, 0.3);
    }

    .action-button {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.12);
        padding: 0.7rem;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
        color: rgba(255, 255, 255, 0.6);
    }

